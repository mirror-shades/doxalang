{
  "name": "doxalang",
  "displayName": "Doxalang",
  "description": "Language support for the Doxa programming language with LSP integration",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/node": "^20.17.6",
    "typescript": "^5.7.2"
  },
  "contributes": {
    "languages": [{
      "id": "doxa",
      "aliases": ["Doxa", "doxa"],
      "extensions": [".doxa"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "doxa",
      "scopeName": "source.doxa",
      "path": "./syntaxes/doxa.tmLanguage.json"
    }]
  }
}
